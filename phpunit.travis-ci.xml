<?xml version="1.0" encoding="UTF-8"?>

<!-- https://phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.8/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         bootstrap="vendor/autoload.php"
>
    <php>
        <server name="KERNEL_CLASS" value="App\Kernel" />
        <env name="SYMFONY_DEPRECATIONS_HELPER" value="weak" />

        <env name="DATABASE_URL" value="mysql://root:@127.0.0.1:3306/myapp_test"/>
        <env name="APP_ENV" value="test"/>
        <env name="APP_SECRET" value="secret!"/>
        <env name="RESQUE_PREFIX" value="app.simplytestable.com"/>
        <env name="ADMIN_USER_EMAIL" value="admin@simplytestable.com"/>
        <env name="ADMIN_USER_PASSWORD" value="password1"/>
        <env name="DEFAULT_TRIAL_PERIOD" value="30"/>
        <env name="WEB_CLIENT_STRIPE_WEB_HOOK_URL" value="http://test.gears.simplytestable.com/stripe/event/"/>
        <env name="STRIPE_KEY" value="stripe_key_value"/>
        <env name="POSTMARK_API_KEY" value="postmark_api_key_value"/>

        <server name="DOTENV_PATH" value="../../../.env.travis" />
    </php>

    <testsuites>
        <testsuite name="Project Test Suite">
            <directory>tests</directory>
        </testsuite>
        <testsuite name="Controllers">
            <directory>tests/App/Unit/Controller</directory>
            <directory>tests/App/Functional/Controller</directory>
        </testsuite>
        <testsuite name="Services">
            <directory>tests/App/Unit/Services</directory>
            <directory>tests/App/Functional/Services</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src</directory>
            <exclude>
                <directory>src/*Bundle/Resources</directory>
                <directory>src/*/*Bundle/Resources</directory>
                <directory>src/*/Bundle/*Bundle/Resources</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
